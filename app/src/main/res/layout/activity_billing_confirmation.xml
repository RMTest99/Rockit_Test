<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillingConfirmationActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/confirmlogo" />

    <TextView
        android:id="@+id/textView"
        android:textColor="#20B1E6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="You rocked it! Now it's our turn to do so!" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/supermanicon" />
    
    <Button
        android:id="@+id/returnBtn"
        android:layout_width="343dp"
        android:layout_height="55dp"
        android:text="Return back to Shopping"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:layout_marginBottom="35dp"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btnbg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>